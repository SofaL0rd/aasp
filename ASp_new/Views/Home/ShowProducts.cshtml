@using ASp_new.ViewModels
@using ASp_new.Models
@model ProductsViewModel

@{
    ViewData["Title"] = "Products";

}


<div>
    <h2>User: @Model.Products.ToList()[0].UserOwn.Name</h2>
</div>
<section>

    <table class="table table-striped table-bordered">
        @for (int i = 0; i < Model.Products.Count(); i++)
        {
            var item = Model.Products.ElementAt(i);
            if (item != null)
            {
                <form asp-
                ="ChangeProducts" asp-controller="Home" method="post">
                <tr>
                    <td>
                        <label>Product ID</label>
                        <input type="hidden" asp-for="@item.Id" value="@item.Id" name="Id" />
                        <input disabled value="@item.Id"  />
                    </td>
                    <td>
                        <label>Product Name</label>
                        <input asp-for="@item.Name" value="@item.Name" name="Name"  />
                    </td>
                    <td>
                        <label>Product Description</label>
                        <input asp-for="@item.Description" value="@item.Description" name="Description" />
                    </td>
                    <td >
                        <button type="submit" >Save Changes</button>
                    </td>
                </tr>
                </form>
            }
        }
    </table>

</section>